<% layout('layouts/boilerplate') %>

<section>
  <div class="container mx-auto">
    <div class="w-full px-4 pt-36">
      <div class="max-w-xl mx-auto text-center mb-16">
        <h2
          class="font-bold text-slate-800 text-3xl mb-2 sm:text-2xl lg:text-3xl"
        >
          Form Edit Data
        </h2>
      </div>
    </div>
    <div class="w-full px-10 mb-8 mx-auto">
      <div class="max-w-xl mx-auto mb-10 bg-slate-50 p-6 rounded-lg shadow">
        <form
          action="/datasets/<%= datasets._id %>?_method=PUT"
          method="post"
          autocomplete="off"
        >
          <div class="mb-6">
            <label
              for="nama"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
              >Nama Lengkap</label
            >
            <input
              type="text"
              id="nama"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="ex: John Smith"
              name="datasets[nama]"
              required="true"
              value="<%= datasets.nama %>"
            />
          </div>
          <div class="mb-6">
            <label
              for="email"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="datasets[email]"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              value="<%= datasets.email %>"
            />
          </div>
          <div class="mb-6">
            <label
              for="handphone"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
              >Nomor Handphone/WhatsApp</label
            >
            <input
              type="text"
              id="handphone"
              name="datasets[handphone]"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              value="<%= datasets.handphone %>"
            />
          </div>
          <div class="mb-6">
            <label
              for="perusahaan"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
              >Perusahaan</label
            >
            <input
              type="text"
              id="perusahaan"
              name="datasets[perusahaan]"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              value="<%= datasets.perusahaan %>"
            />
          </div>
          <div class="mb-6">
            <label
              for="program"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
              >Program</label
            >
            <input
              type="text"
              id="program"
              name="datasets[program]"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              required="true"
              value="<%= datasets.program %>"
            />
          </div>
          <div class="mb-6">
            <label
              for="batch"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
              >Batch Program</label
            >
            <input
              type="text"
              id="batch"
              name="datasets[batch]"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              value="<%= datasets.batch %>"
            />
          </div>
          <div class="mb-6">
            <label
              for="status"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400"
              >Status</label
            >
            <select
              id="status"
              name="datasets[status]"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            >
              <% if (datasets.status==="closing") {%>
              <option value="closing" selected>Closing</option>
              <option value="rapoo">Rapoo</option>
              <option value="schedule">Schedule</option>
              <option value="refollow up">Refollow Up</option>
              <option value="program">Program</option>
              <option value="price">Price</option>
              <% } else if(datasets.status==="rapoo") {%>
              <option value="closing">Closing</option>
              <option value="rapoo" selected>Rapoo</option>
              <option value="schedule">Schedule</option>
              <option value="refollow up">Refollow Up</option>
              <option value="program">Program</option>
              <option value="price">Price</option>
              <% } else if (datasets.status==="schedule") {%>
              <option value="closing">Closing</option>
              <option value="rapoo">Rapoo</option>
              <option value="schedule" selected>Schedule</option>
              <option value="refollow up">Refollow Up</option>
              <option value="program">Program</option>
              <option value="price">Price</option>
              <% } else if(datasets.status==="refollow up") {%>
              <option value="closing">Closing</option>
              <option value="rapoo">Rapoo</option>
              <option value="schedule">Schedule</option>
              <option value="refollow up" selected>Refollow Up</option>
              <option value="program">Program</option>
              <option value="price">Price</option>
              <% } else if (datasets.status==="program") {%>
              <option value="closing">Closing</option>
              <option value="rapoo">Rapoo</option>
              <option value="schedule">Schedule</option>
              <option value="refollow up">Refollow Up</option>
              <option value="program" selected>Program</option>
              <option value="price">Price</option>
              <% } else if (datasets.status==="price") {%>
                <option value="closing">Closing</option>
                <option value="rapoo">Rapoo</option>
                <option value="schedule">Schedule</option>
                <option value="refollow up">Refollow Up</option>
                <option value="program" >Program</option>
                <option value="price" selected>Price</option>
              <% } %>
            </select>
          </div>

          <div class="mb-6">
            <label
              for="concern"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
              >Concern</label
            >
            <select
              id="concern"
              name="datasets[concern]"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            >
              <% if (datasets.concern==="quality") {%>
              <option value="quality" selected>Quality</option>
              <option value="cost">Cost</option>
              <option value="delivery">Delivery</option>
              <option value="service">Service</option>
              <% } else if(datasets.concern==="cost") {%>
                <option value="quality">Quality</option>
                <option value="cost" selected>Cost</option>
                <option value="delivery">Delivery</option>
                <option value="service">Service</option>
              <% } else if (datasets.concern==="delivery") {%>
                <option value="quality">Quality</option>
                <option value="cost">Cost</option>
                <option value="delivery" selected>Delivery</option>
                <option value="service">Service</option>
              <% } else if(datasets.concern==="service") {%>
                <option value="quality">Quality</option>
                <option value="cost">Cost</option>
                <option value="delivery">Delivery</option>
                <option value="service" selected>Service</option>
              <% } %>
            </select>
          </div>
          <div class="mb-6">
            <label
              for="sumber"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400"
              >Sumber</label
            >
            <select
              id="sumber"
              name="datasets[sumber]"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            >
              <% if (datasets.sumber==="kontak") {%>
              <option value="kontak" selected>Kontak</option>
              <option value="whatsapp">WhatsApp</option>
              <option value="wordpress">Wordpress</option>
              <% } else if(datasets.sumber==="whatsapp") {%>
              <option value="kontak">Kontak</option>
              <option value="whatsapp" selected>WhatsApp</option>
              <option value="wordpress">Wordpress</option>
              <% } else if (datasets.sumber==="wordpress") {%>
              <option value="kontak">Kontak</option>
              <option value="whatsapp">WhatsApp</option>
              <option value="wordpress" selected>Wordpress</option>
              <% } %>
            </select>
          </div>
          <button
            type="submit"
            class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          >
            Update
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
