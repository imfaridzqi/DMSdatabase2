              <a href="/user/register" class="text-base text-slate-800 py-2 mx-8 flex group-hover:text-sky-500">Daftar</a>
            </li>
             <% } else { %> 
            <li class="group">
              <a href="/user/logout" class="text-base py-2 mx-8 flex group-hover:bg-sky-800 bg-sky-300 px-5 text-white rounded-md transition duration-300">Logout</a>
            </li>
            <% } %> 
