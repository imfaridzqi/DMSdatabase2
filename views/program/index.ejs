<% layout('layouts/boilerplate') %>

<section class="mb-16">
  <div class="container mx-auto">
    <div class="w-full px-4 pt-36">
      <div class="max-w-xl mx-auto text-center mb-16">
        <h2
          class="font-bold text-slate-800 text-3xl mb-2 sm:text-2xl lg:text-3xl"
        >
          List Program
        </h2>
      </div>
    </div>
    <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
      <a href="/program/new" type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 float-right">Tambah Program</a>
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead
          class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
        >
          <tr>
            <th scope="col" class="py-3 px-6">Nama Program</th>
            <th scope="col" class="py-3 px-6">Action</th>
          </tr>
        </thead>
        <tbody>
            <% for (let prog of program) {%> 
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <th
              scope="row"
              class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"
            >
              <%= prog.nama  %> 
            </th> 
            <td class="py-4 px-6">
              <a
                href="/program/<%= prog._id %>"
                class="font-medium text-blue-600 dark:text-blue-500 hover:underline"
                >Edit</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</section>
